{% extends "base.jinja2" %}

{% block content %}
    <div class="container">
        {% if album.name %}
        <h3>{{ album.name }}</h3>
        <section class="d-flex p-2 flex-row m-3 align-items-end">
            <img src="{{ album.image_url }}">
            <ul class="list-unstyled">
                {% for artist in album.artists %}
                <li>
                    <h5>
                        {{ artist }}
                    </h5>
                </li>
                {% endfor %}
            </ul>
        </section>
        <table class="table">
            <tbody>
                {% for track in album.tracks %}
                <tr>
                    <td>{{ track.name }}</td>
                    <td>{{ track.duration }}</td>
                    <td>
                        <button class="btn-primary btn">
                            Play
                        </button>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}

        <h2>Error</h2>
        <p>Server-side error in rendering template.</p>
        {% endif %}
    </div>
{% endblock content %}
